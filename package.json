{
  "name": "database-management-app",
  "version": "0.1.1",
  "description": "Database management desktop app",
  "author": "JOHN",
  "private": true,
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_DEV=1 NODE_ENV=development electron .\"",
    "build": "node ./node_modules/next/dist/bin/next build",
    "start": "node ./node_modules/next/dist/bin/next start",
    "lint": "eslint",
    "dist": "npm run build && cross-env NODE_ENV=production electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "dotenv": "^16.4.5",
    "lucide-react": "^0.562.0",
    "next": "^16.1.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tar": "^7.5.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^0.0.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "concurrently": "*",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "tailwindcss": "^4",
    "typescript": "^5.9.3",
    "wait-on": "*"
  },
  "overrides": {
    "form-data": "^4.0.0",
    "qs": "^6.11.0",
    "tough-cookie": "^4.2.0"
  },
  "build": {
    "appId": "com.example.nextdesktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "main": "electron/main.js"
}
